# ===========================================
# NexusPoint Website - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database (PostgreSQL)
# For local development, you can use: postgresql://user:password@localhost:5432/nexuspoint
# For production, use a hosted database URL (e.g., from Supabase, Neon, Railway, etc.).
# NOTE: Vercel cannot connect to your local machine's localhost database.
# If you're using Vercel Postgres, you can usually omit DATABASE_URL and the app will use
# POSTGRES_PRISMA_URL / POSTGRES_URL_NON_POOLING / POSTGRES_URL automatically.
DATABASE_URL="postgresql://user:password@localhost:5432/nexuspoint"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="NexusPoint"

# Multi-tenant demo / SaaS
# Used for workspace links like: pizza.nexuspoint.com
TENANT_ROOT_DOMAIN="nexuspoint.com"
NEXT_PUBLIC_TENANT_ROOT_DOMAIN="nexuspoint.com"

# JWT Secret for authentication (generate a secure random string)
# You can generate one using: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Admin Setup (used for initial admin creation)
ADMIN_EMAIL="xxxxxxxxxxx"
ADMIN_PASSWORD="change-this-password"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="10"
RATE_LIMIT_WINDOW_MS="60000"

# Email Configuration (for contact form notifications)

RESEND_API_KEY="re_xxxxxxxxxxxx"
RESEND_FROM="NexusPoint <noreply@nexuspoint.ae>"

# Optional: Analytics
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Debug (for testing SMTP in production)
# Access: https://yourdomain.com/api/debug/smtp?key=your-debug-key
DEBUG_KEY="nexuspoint-debug-2024"

# Environment
# Avoid setting NODE_ENV manually on Vercel; it manages this automatically.
# NODE_ENV="development"
